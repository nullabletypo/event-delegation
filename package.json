  "scripts": {
    "example": "parcel example/index.html --port 3000 --out-dir example/dist --cache-dir example/.cache --open",
    "compile": "run-p -l compile:**",
    "compile:dist:esm": "tsc --outDir dist/esm --module esnext",
    "compile:dist:cjs": "tsc --outDir dist/cjs --module commonjs",
    "compile:rx:esm": "tsc -p rx/tsconfig.json --outDir rx/dist/esm --module esnext",
    "compile:rx:cjs": "tsc -p rx/tsconfig.json --outDir rx/dist/cjs --module commonjs",
    "clean": "run-p -l clean:**",
    "clean:dist": "rimraf dist",
    "clean:rx": "rimraf rx/dist",
    "lint": "eslint src/**/*.ts",
    "postpublish": "run-s clean",
    "publish:npm": "yarn publish",
    "release": "run-s test compile publish:npm",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfig": "test/tsconfig.json"
